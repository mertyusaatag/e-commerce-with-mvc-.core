@model ProductDetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-3">
        <img src="/img/@Model.product.ImageUrl" alt="@Model.product.Name" class="img-fluid" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">
            @Model.product.Name
        </h1>
        <hr />
        @foreach (var category in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
        }
        
    <div class="mb-3">
        <h4 class="text-primary mb-3">
            @Model.product.Price TL
        </h4>

        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
            <input type="hidden" name="productId" value="@Model.product.Id" />
            <div class="input-group mb-3" >
            <input type="number" name="quantity" class="form-control" min="1" value="1" step="1" style="width:100px"/>
               
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-cart-plus">
                        Add To Cart
                    </i>
                </button>
            </div>
            </div>    
        </form>
    </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">
            @Html.Raw(Model.product.Description)
        </p>
    </div>

</div>
